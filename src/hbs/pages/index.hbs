{{#> layouts/base }}
  {{#*inline "content"}}

    <mwc-top-app-bar>
      <div slot="title">List of products</div>
      <mwc-icon-button id="info" icon="info" slot="actionItems"></mwc-icon-button>
    </mwc-top-app-bar>

    <mwc-dialog id="dialog" heading="Что это?">
      <div>
        Это цифровой список покупок.
        Данные о покупках сохраняются в телефоне и никогда не отправляются в интернет.
        Приложение работает и в оффлайне.
      </div>
      <mwc-button
          slot="primaryAction"
          dialogAction="accept">
        Ясно
      </mwc-button>
    </mwc-dialog>

    <main class="main">
      <div class="wrapper">
<!--        <header class="header">-->
<!--          <h1 class="header-title">-->
<!--            List of products-->
<!--          </h1>-->
<!--        </header>-->

        <h2 class="title">Купить:</h2>

        <mwc-list multi>
          <mwc-check-list-item>Несколько апельсинов</mwc-check-list-item>
          <mwc-check-list-item>Дыня</mwc-check-list-item>
          <mwc-check-list-item>Ананас</mwc-check-list-item>
          <mwc-check-list-item>Абрикосы</mwc-check-list-item>
          <mwc-check-list-item>Поп корн</mwc-check-list-item>
        </mwc-list>

        <h2 class="title">Куплено:</h2>

        <mwc-list multi>
          <mwc-check-list-item selected>Финики</mwc-check-list-item>
          <mwc-check-list-item selected>Папайя</mwc-check-list-item>
        </mwc-list>

      </div>
    </main>

  {{/inline}}
{{/ layouts/base }}