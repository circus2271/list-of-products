            <mwc-button slot="secondaryAction" dialogAction="cancel">Не удалять</mwc-button>
          </mwc-dialog>
          <mwc-dialog heading="Удалить список уже приобретённых товаров?" id="second-dialog">
            <mwc-button slot="primaryAction" dialogAction="delete">Удалить</mwc-button>
            <mwc-button slot="secondaryAction" dialogAction="cancel">Не удалять</mwc-button>
          </mwc-dialog>

          <script>
            const dialog = document.querySelector('sl-dialog');
            // const openButton = dialog.nextElementSibling;
            const openButton = document.getElementById('sl-info');
            const closeButton = dialog.querySelector('[slot="footer"] sl-button');

            openButton.addEventListener('click', () => dialog.show());
            closeButton.addEventListener('click', () => dialog.hide());
          </script>


